{% extends './../_shared/layout.twig' %}

{% set page_title = 'Bio' %}

{% block main %}

<bio-controller>
    <div class="container mx-auto max-w-screen-xl px-4">
        {% for section in bio.sections %}
        <div class="grid grid-cols-12 gap-2 md:gap-8 mb-6">
            <div class="self-start h-full col-span-12 md:col-span-3 text-start md:text-end">
                <p data-targets="bio-controller.animatedElements" class="sticky top-20"><strong>{{section.heading}}</strong></p>
            </div>
            <div class="col-span-12 md:col-span-8 lg:col-span-7 flex flex-col gap-3">
                {% for paragraph in section.paragraphs %}
                <p data-targets="bio-controller.animatedElements" class="text-justify">
                    {{paragraph}}
                </p>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</bio-controller>

{% endblock %}
