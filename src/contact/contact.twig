{% extends './../_shared/layout.twig' %}

{% set page_title = 'Contact' %}

{% block main %}

<contact-controller>
    <div class="container h-full flex items-center mx-auto max-w-screen-md px-4 pb-24">
        <div class="grid grid-cols-12 gap-2 md:gap-8 mb-6">
            <div class="self-start h-full col-span-12 md:col-span-3 text-start md:text-end">
                <p data-targets="contact-controller.animatedElements" class="sticky top-20"><strong>{{contact.heading}}</strong></p>
            </div>
            <div class="col-span-12 md:col-span-9">
                <p data-targets="contact-controller.animatedElements" class="text-justify">
                    {{contact.body}}
                </p>
                <div class="flex flex-col gap-3 pt-5">
                {% for link in contact.links %}
                    <div class="flex flex-row flex-nowrap gap-3" data-targets="contact-controller.animatedElements">
                        <span class="fill-white w-6">{{link.icon}}</span>
                        <a target="_blank" href="{{link.href}}">
                            {{link.text}}
                        </a>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</contact-controller>

{% endblock %}
